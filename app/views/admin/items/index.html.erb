<div="row">
  <h5 class = p-3 >商品一覧</h5>
</div>

<div class = "row d-flex justify-content-center p-3">
  <table class ="table">
    <thead>
      <tr class ="table-color">
       <th>商品ID </th>
       <th>商品名 </th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item), class:"text-dark" %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><% if item.is_active == true %>
        <div class="text-success">販売中</div>
       <% else %>
        販売停止中
       <% end %>
       </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

