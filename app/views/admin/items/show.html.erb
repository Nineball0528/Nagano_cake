<div class ="row">
  <h5 class = 'p-3' >商品詳細</h5>
</div>

<div class= "container">
    <div class = "row">
        <div class = "col-4">
          <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "200x200" %>
          <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
        </div>
      <div class ="col-8">
          <table class="table table-borderless">
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

         <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
         </tr>
         <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
         </tr>
         <tr>
          <td>税込価格<br>（税抜価格）</td>
          <td><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
           <% if @item.is_active == true %>
           <div class="text-success">販売中</div>
           <% else %>
           販売停止中
           <% end %>
          </td>
         </tr>
       </tbody>
      </table>
     </div>
    </div>
</div>
<div class="row d-flex justify-content-center">
 <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success w-120px" %>
</div>