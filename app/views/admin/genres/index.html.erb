<div="row">
  <h5 class = p-3 >ジャンル一覧・追加</h5>
</div>
<div class="row">
  <%= form_with model: @genre, url:admin_genres_path do |f| %>

  <%= f.label :ジャンル名, class:"p-3" %>

  <%= f.text_field :name, placeholder: "ジャンル名", class:"mr-5" %>
 <%= f.submit "新規登録", class: "btn btn-success" %>

  <% end %>
</div>
<div class="row mt-4">
 <div class="col-4">
 <table class="table table-hover">
  <thead>
   <tr class="table-color">
    <th>ジャンル</th>
    <th></th>
   </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
   <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success w-120px" %></td>
   </tr>
  </tbody>
   <% end %>
 </table>
 </div>
</div>