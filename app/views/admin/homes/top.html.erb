<div class="row">
  <h4><div class="p-3">注文履歴一覧</div></h4>
</div>
<div class="row">
  <div class="col">
   <table class="table">
    <thead>
     <tr class="table-color">
      <th>購入日時</td>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
     </tr>
    </thead>
    <tbody>
     <% @orders.each do |order| %>
     <tr>
      <td><ins><%= link_to order.created_at.strftime("%Y%m%d %H:%M:%S"), admin_order_path(order), class:"text-dark" %></ins></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%= order.order_details.sum (:quantity) %></td>
      <td><%= order.status_i18n %></td>
     </tr>
    <% end %>
    <%= paginate @orders %>
   </tbody>
  </table>
 </div>
</div>