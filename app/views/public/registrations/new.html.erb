<div class="row p-3">
  <h4><div class="public-title">新規会員登録</div></h4>
</div>


<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="row">
  <div class="col-10">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>名前</td>
          <td>
             (姓)<%= f.text_field :last_name, placeholder:"令和", class:"ml-4 mr-3" %>
             (名)<%= f.text_field :first_name, placeholder:"道子", class:"ml-4" %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            (セイ)<%= f.text_field :last_name_kana, placeholder:"レイワ", class:"ml-2 mr-3" %>
            (メイ)<%= f.text_field :first_name_kana, placeholder:"ミチコ", class:"ml-2" %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"ml-5" %></td>
        </tr>
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td> <%= f.text_field :postal_code, placeholder:"0000000", class:"ml-5" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", class:"ml-5 col-8" %></td>
        </tr>
        <tr>
          <td>電話番号（ハイフンなし）</td>
          <td><%= f.text_field :telephone_number, placeholder:"00000000000", class:"ml-5" %></td>
        </tr>
        <tr>
          <td>パスワード（６文字以上）</td>
          <td> <%= f.password_field :password, autocomplete: "new-password", class:"ml-5" %></td>
        </tr>
        <tr>
          <td>パスワード（確認用）</td>
          <td> <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"ml-5" %></td>
        </tr>
        <tr>
          <td></td>
          <td> <%= f.submit "新規登録", class:"btn btn-success w-160px ml-5" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
</div>

<div class="row p-3">
  <h4><div class="public-title-b">既に登録済みの方</div></h4>
</div>
<ins><%= link_to "こちら", new_customer_session_path %></ins>からログインしてください。
