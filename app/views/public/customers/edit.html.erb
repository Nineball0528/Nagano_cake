<div class="row">
 <h4><div class="p-3">会員情報編集</div></h4>
</div>
<div class="row">
 <div class="col-8">
  <%= form_with model:@customer, method: :patch, url: current_customer_path(@customer), local:true do |f| %>
  <table class="table table-borderless">
   <tbody>
    <tr>
     <td>氏名</td>
     <td>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
     </td>
    </tr>
    <tr>
     <td>フリガナ</td>
     <td>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
     </td>
    </tr>
    <tr>
     <td>郵便番号</td>
     <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
     <td>住所</td>
     <td><%= f.text_field :address, class:"col-12" %></td>
    </tr>
    <tr>
     <td>電話番号</td>
     <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td><%= f.email_field :email %></td>
    </tr>
   </tbody>
  </table>
 </div>
</div>
<div class="row">
 <%= f.submit "編集内容を保存", class:"btn btn-success w-160px ml-210px" %>
 <% end %>
 <%= link_to "退会する", current_customer_withdrawal_confirm_path, class:"btn btn-danger w-120px ml-220px" %>
</div>
