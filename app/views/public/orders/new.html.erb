<div class="row">
 <h4><div class="p-3">注文情報入力</div></h4>
</div>


  <h4>支払方法</h4>
   <%= form_with model:@order, url:orders_confirm_path, method: :post, local: true do |f| %>
<div class="row">
 <div class="col">
   <div class="form-group ml-3">
    <%= f.radio_button :method_of_payment, Order.payment_methods.key(0), checked: true %>
    <%= f.label :method_of_payment, Order.payment_methods_i18n[:credit_card] %><br>
    <%= f.radio_button :method_of_payment, Order.payment_methods.key(1) %>
    <%= f.label :method_of_payment, Order.payment_methods_i18n[:transfer]%>
   </div>
 </div>
</div>
<div class="row">
 <div class="col">
  <h4>お届け先</h4>
  <div class="form-group ml-3">
    <%= f.radio_button :address_number, 1, checked: true %>
    <%= f.label "ご自身の住所" %>
    <div class="ml-3">
     〒<%= current_customer.postal_code %><%= current_customer.address %><br>
     <%= current_customer.last_name %><%= current_customer.first_name %>
    </div>
  </div>
  <div class="form-group ml-3">
    <%= f.radio_button :address_number, 2 %>
    <%= f.label "登録先住所から選択" %>
    <div class="ml-3">
     <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :full_address) %><br>
    </div>
  </div>
  <div class="form-group ml-3">
    <%= f.radio_button :address_number, 3 %>
    <%= f.label "新しいお届け先" %><br>
   <table class="table table-borderless ml-3">
    <tbody>
     <tr>
      <td class="p-orders col-3">郵便番号（ハイフンなし）</td>
      <td><%= f.text_field :shipping_zip_code, placeholder: "0000000" %></td>
     </tr>
     <tr>
      <td class="p-orders">住所</td>
      <td><%= f.text_field :shipping_address, placeholder: "東京都渋谷区代々木神園町0-0", class:"col-8" %></td>
     </tr>
     <tr>
      <td class="p-orders">宛名</td>
      <td><%= f.text_field :delivery_name, placeholder: "令和道子" %></td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>

<div class="row d-fex justify-content-center">
 <%= f.submit "確認画面へ進む", class:"btn btn-primary w-160px mt-2" %>
</div>
<% end %>