<div class="row">
  <h4><div class="p-3">注文履歴詳細</div></h4>
</div>

<div class="row">
  <div class="col-7">
    <b>注文情報</b>
   <table class='table table-bordered table-b-c'>
    <tbody>
     <tr>
      <td class="table-color-b">注文日</td>
      <td><%= @order.created_at.strftime ('%Y/%m/%d') %></td>
     </tr>
     <tr>
      <td class="table-color-b"><p class="mt-4">配送先</p></td>
      <td>
        〒<%= @order.shipping_zip_code %><br>
        <%= @order.shipping_address %><br>
        <%= @order.delivery_name %>
      </td>
     </tr>
     <tr>
      <td class="table-color-b">支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
     </tr>
     <tr>
      <td class="table-color-b">ステータス</td>
      <td><%= @order.status_i18n %></td>
     </tr>
    </tbody>
   </table>
  </div>
  <div class="col-3">
    <b>請求情報</b>
   <table class="table table-bordered table-b-c">
    <tbody>
     <tr>
      <td class="table-color-b">商品合計</td>
      <td><%= @order.payment_amount - @order.postage %></td>
     </tr>
     <tr>
      <td class="table-color-b">配送料</td>
      <td><%= @order.postage %></td>
     </tr>
     <tr>
      <td class="table-color-b">ご請求額</td>
      <td><%= @order.payment_amount %></td>
     </tr>
    </tbody>
   </table>
  </div>
</div>

<div class="row">
  <div class="col-8">
  <b>注文内容</b>
  <table class="table table-bordered table-b-c">
   <thead>
    <tr class="table-color-b">
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
   </thead>
   <tbody>
     <% @order_details.each do |order_detail| %>
     <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.quantity * (order_detail.item.with_tax_price) %></td>
     </tr>
    <% end %>
   </tbody>
  </table>
  </div>
</div>